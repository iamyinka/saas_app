<% if params[:plan] == '2' %>
  <div class="text-center">
    <h2>Sign up For Pro Membership</h2>
    <p>Sign up for a pro membership &amp; get unrestricted access to contacts in the community.</p>
  </div>
<% else %>
  <div class="text-center">
    <h2>Basic Membership Registration</h2>
    <p>Sign up for free &amp; enjoy basic access to the community</p>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    
    <% if params[:plan] == '2' %>
      <%= render  "pro_form" %>
    <% else %>
      <%= render  "basic_form" %>
    <% end %>
    <%= render "devise/shared/links" %>
    
  </div>
</div>