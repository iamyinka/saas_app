<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= hidden_field_tag 'plan', params[:plan] %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: 'form-control', autofocus: true %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= label_tag :card_number, "Credit Card Number" %>
    <%= text_field_tag :card_number, nil, name: nil, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :card_code, "CVV2" %>
    <%= text_field_tag :card_code, nil, name: nil, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :card_month, "Credit Expiration" %>
    <%= select_month nil, {add_month_numbers: true}, {name: nil, id: 'card_month'} %>
    <!-- <%= select_month(Date.today, add_month_numbers: true) %> -->
    <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+20}, {name: nil, id: 'card_year'} %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-success btn-lg btn-block', id: 'form-submit-btn' %>
  </div>
<% end %>